#:kivy 2.3.0

<PongBall>: 
    size: 50,50
    canvas:
        Ellipse:
            size: self.size
            pos: self.pos
<PongGame>:
    ball: pong_ball

    canvas:
        Rectangle:
            size: 10, self.height
            pos : self.center_x-5, 0
    Label:
        text: "0"
        font_size: 70
        top: root.height - 50
        center_x: root.width / 4

    Label:
        text: "0"
        font_size: 70
        top: root.height - 50
        center_x: root.width * 3/4
        
    PongBall:
        center: root.center
        id: pong_ball